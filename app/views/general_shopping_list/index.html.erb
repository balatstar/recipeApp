<h1>General Shopping List</h1>

<div id="general_shopping_lists">
<ul>
  <% @recipes.each do |recipe| %>
    <h2><%= recipe.name %></h2>
    <ul>
      <% recipe.recipe_foods.each do |recipe_food| %>
        <% food = recipe_food.food %>
        <% quantity_needed = recipe_food.quantity %>
        <% quantity_available = food.quantity || 0 %>

        <% if quantity_available < quantity_needed %>
          <li><%= food.name %> - Needed: <%= quantity_needed %>, Available: <%= quantity_available %></li>
        <% end %>
      <% end %>
    </ul>
  <% end %>
</ul>

<%= link_to "New general shopping list", new_general_shopping_list_path %>
</div>
